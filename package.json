{
  "name": "prompt-engineering-test-harness",
  "version": "1.0.0",
  "description": "Prompt Engineering Test Harness for LLM evaluation",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
    "client": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install-all": "npm install && cd frontend && npm install"
  },
  "keywords": ["llm", "prompt", "monitoring", "evaluation"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
